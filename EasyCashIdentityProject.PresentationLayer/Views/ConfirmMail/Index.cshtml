@model ConfirmMailViewModel
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />

    <form method="post">
        <h2>Mail Adresi Onaylama Sayfası @*@ViewBag.mailAdress*@</h2>
        <br />
         <label>Mail Adresiniz: </label>
        <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v" />
        <br />
        <label>Mail Adresinize Gelen 6 Haneli Kod: </label>
        <input type="text" class="form-control" asp-for="ConfirmCode" />
        <br />
        <button class="btn btn-primary">Hesabı Aktifleştir</button>
    </form>

</div>